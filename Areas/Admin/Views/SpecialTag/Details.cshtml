@model OnlineShop.Models.SpecialTag
@{
    ViewData["Title"] = "Details page for Spacial Tag";
}


<h2 class="text-info">Special Tag</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TagName"></label>
            </div>
            <div class="col-5">
                <input asp-for="TagName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="TagName" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <input type="submit" class="btn btn-primary" value="Back" />
        </div>
    </div>
</form>