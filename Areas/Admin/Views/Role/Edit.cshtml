@{
    ViewData["Title"] = "Edit product";
}
<br />

<h2 class="text-info">Edit Product</h2>

<form asp-action="Edit" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <h3>@ViewBag.mgs</h3>

        <div class="form-group row mb-1">
            <div class="col-2">
                <label>Role Name </label>
            </div>
            <input type="hidden" value="@ViewBag.Id" name="id"/>
            <div class="col-5">
                <input id="name" required="required" name="name" class="form-control" value="@ViewBag.name" />
            </div>

        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>
</form>

